# toggle sticky window
bindsym $mod+s sticky toggle

# move floating windows with keyboard
bindsym $mod+m mode "move" focus floating
mode "move" {
    bindsym $mod+Tab focus right

    set $window-move-amount 50 px

    bindsym Left  move left
    bindsym Down  move down
    bindsym Up    move up
    bindsym Right move right

    bindsym j     move left $window-move-amount
    bindsym k     move down $window-move-amount
    bindsym l     move up $window-move-amount
    bindsym semicolon     move right $window-move-amount

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Configure 5px of space between windows and to the screen edges.
gaps inner 2px

# Configure an additional 5px of extra space to the screen edges,
# for a total gap of 10px to the screen edges, and 5px between windows.
gaps outer 2px

# Overwrite gaps to 0, I need all the space I can get on workspace 1
workspace 1 gaps inner 0
workspace 1 gaps outer 1

# Overwrite gaps to 0, I need all the space I can get on workspace 2
workspace 2 gaps inner 0
workspace 2 gaps outer 1

# Only enable outer gaps when there is exactly one window or split container on the workspace.
smart_gaps inverse_outer

